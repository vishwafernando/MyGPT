{
  "apps": [{
    "name": "mygpt-backend",
    "script": "index.js",
    "cwd": "./backend",
    "env_file": "./backend/.env",
    "env": {
      "NODE_ENV": "production",
      "PORT": "80",
      "CLIENT_URL": "http://localhost:5173"
    },
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_file": "./logs/combined.log",
    "time": true,
    "instances": 1,
    "exec_mode": "fork",
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "1G"
  }]
}
